@model AdminPanel.Models.VideoCard


<h4>Видеокарта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="control-label">Производитель</label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label">Семейство</label>
                <input asp-for="Family" class="form-control" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LetterIndex" class="control-label">Буквенный индекс</label>
                <input asp-for="LetterIndex" class="form-control" />
                <span asp-validation-for="LetterIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Generation" class="control-label">Поколение</label>
                <input asp-for="Generation" class="form-control" />
                <span asp-validation-for="Generation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Series" class="control-label">Серия</label>
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeMemory" class="control-label">Тип памяти</label>
                <input asp-for="TypeMemory" class="form-control" type="number"/>
                <span asp-validation-for="TypeMemory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountMemory" class="control-label">Объем памяти</label>
                <input asp-for="CountMemory" class="form-control" type="number"/>
                <span asp-validation-for="CountMemory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" type="number"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>
