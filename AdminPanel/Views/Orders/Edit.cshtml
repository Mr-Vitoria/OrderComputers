@model AdminPanel.Models.Order


<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ExecutorId" class="control-label">Исполнитель</label>
                <input asp-for="ExecutorId" class="form-control" />
                <span asp-validation-for="ExecutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Заказчик</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComputerAssemblyId" class="control-label">Сборка компьютера</label>
                <select asp-for="ComputerAssemblyId" class="form-control" asp-items="ViewBag.ComputerAssemblyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label">Итоговая цена</label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>
